<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_profile"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    android:textSize="80dp"
                    android:background="@drawable/bg_rounded"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_bold"/>

            </LinearLayout>

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linear_profile"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/linear_company"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_profile_name"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/iv_logo"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_company_name"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/gray"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_job_id"
                android:layout_marginTop="50dp"
                android:hint="Job Id / Link"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@id/linear_company"
                android:padding="15dp"
                android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_ask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_job_id"
            android:layout_marginTop="20dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_ask"
                android:background="@color/gray"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center_horizontal"
                    android:padding="20dp"
                    android:text="Ask for referral"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="19dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_ask"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nunito_regular"
                android:text="Your default profile would be shared with the job poster"
                android:textAlignment="center"
                android:textColor="@color/gray" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>